{% extends 'layout.html.twig' %}

{% block title %}User authentication{% endblock %}

{% block content %}
    <!-- main-container start -->
    <!-- ================ -->
    <section class="main-container container">
        <div class="container container-log">
            <div class="row">
                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">
                    <h2 class="text-center">{{ block('title') }}</h2>
                <div class="main object-non-visible" data-animation-effect="fadeInDownSmall" data-effect-delay="300">
                    <div class="form-block center-block">

                        {% if error %}
                            <h2 class="title">Login</h2>
                            <strong>Login failed!</strong> {{ error }}
                        {% endif %}
                        <form class="form-horizontal"   role="form" action="{{ path('login_check') }}" method="post">
                            <div class="form-group has-feedback">
                                <label for="inputUserName" class="col-sm-3 control-label">Votre identifiant</label>
                                <div class="col-sm-8">
                                    <input type="text" name="_username" value="{{ last_username }}" class="form-control" id="inputUserName" placeholder="User Name" required>
                                    <i class="fa fa-user form-control-feedback"></i>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <label for="inputPassword" class="col-sm-3 control-label">Mot de passe</label>
                                <div class="col-sm-8">
                                    <input type="password" name="_password" class="form-control" id="inputPassword" placeholder="Password" required>
                                    <i class="fa fa-lock form-control-feedback"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-8">
                                    <button type="submit" class="btn btn-group btn-default btn-sm">Log In</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- main end -->
            </div>
                </div>
        </div>
    </section>
{% endblock %}