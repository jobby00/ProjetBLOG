{% extends 'layout.html.twig' %}
{% form_theme articleForm 'bootstrap_3_horizontal_layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}Nouvelle article{% endblock %}

{% block content %}
    <section class="main-container">
        <div class="container">
            <br/><br/>
            <div class="row">
                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">
                    <h2 class="text-center">Nouvelle article</h2>
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                    <div class="well">
                        {{ form_start(articleForm) }}

                        <div class="col-sm-12">
                            {{ form_row(articleForm.author) }}
                            {{ form_widget(articleForm.author, { 'attr':  {
                                'class': 'form-control'
                            }}) }}
                        </div>

                        <div class="col-sm-12">
                            {{ form_row(articleForm.title) }}
                            {{ form_errors(articleForm.title) }}
                            {{ form_widget(articleForm.title, { 'attr':  {
                                'class': 'form-control'
                            }}) }}
                        </div>

                        <div class="col-sm-12">
                            {{ form_row(articleForm.content) }}
                            {{ form_errors(articleForm.content) }}
                            {{ form_widget(articleForm.content, { 'attr':  {
                                'class': 'form-control tinymce_form',
                                'rows': '12'
                            }}) }}
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-3">
                                <input type="submit" class="btn btn-primary" value="Enregistrer" />
                            </div>
                        </div>
                        {{ form_end(articleForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>tinyMCE.init({
           selector : "textarea"
        });</script>
{% endblock %}